<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccueilActivity">

    <ImageView
        android:id="@+id/fontHaut"
        android:layout_width="412dp"
        android:layout_height="163dp"
        android:layout_marginTop="-70dp"
        android:contentDescription="@string/font_haut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hautappli" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/image_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/microsoftteams_image" />

    <TextView
        android:id="@+id/accueilView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mada_bold"
        android:text="@string/accueil_log_key"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageChambre"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/chambre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fontHaut"
        app:srcCompat="@drawable/machambre"
        tools:ignore="ImageContrastCheck,ImageContrastCheck" />

    <TextView
        android:id="@+id/buttonChambre"
        android:layout_width="146dp"
        android:layout_height="71dp"
        android:fontFamily="@font/mada_bold"
        android:text="@string/ma_chambre"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageChambre"
        app:layout_constraintEnd_toEndOf="@+id/imageChambre"
        app:layout_constraintStart_toStartOf="@+id/imageChambre"
        app:layout_constraintTop_toTopOf="@+id/imageChambre"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageReservation"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/r_servation"
        app:layout_constraintEnd_toStartOf="@+id/buttonChambre"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:srcCompat="@drawable/r_servation" />

    <TextView
        android:id="@+id/buttonReservation"
        android:layout_width="166dp"
        android:layout_height="97dp"
        android:fontFamily="@font/mada_bold"
        android:text="@string/ma_r_servation"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageReservation"
        app:layout_constraintEnd_toEndOf="@+id/imageReservation"
        app:layout_constraintStart_toStartOf="@+id/imageReservation"
        app:layout_constraintTop_toTopOf="@+id/imageReservation" />

    <ImageView
        android:id="@+id/imageHotel"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/hotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageReservation"
        app:srcCompat="@drawable/h_tel" />

    <TextView
        android:id="@+id/buttonHotel"
        android:layout_width="166dp"
        android:layout_height="97dp"
        android:fontFamily="@font/mada_bold"
        android:gravity="center_vertical"
        android:text="@string/mon_h_tel"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageHotel"
        app:layout_constraintEnd_toEndOf="@+id/imageHotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageHotel"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageRestau"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/restau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageHotel"
        app:layout_constraintTop_toBottomOf="@+id/imageChambre"
        app:srcCompat="@drawable/restauration" />

    <TextView
        android:id="@+id/buttonRestau"
        android:layout_width="166dp"
        android:layout_height="97dp"
        android:fontFamily="@font/mada_bold"
        android:gravity="center_vertical"
        android:text="@string/restauration"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageRestau"
        app:layout_constraintEnd_toEndOf="@+id/imageRestau"
        app:layout_constraintStart_toStartOf="@+id/imageRestau"
        app:layout_constraintTop_toBottomOf="@+id/imageChambre"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageCompte"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/compte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHotel"
        app:srcCompat="@drawable/moncompte" />

    <TextView
        android:id="@+id/buttonCompte"
        android:layout_width="166dp"
        android:layout_height="97dp"
        android:fontFamily="@font/mada_bold"
        android:gravity="center_vertical"
        android:text="@string/mon_compte"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageCompte"
        app:layout_constraintEnd_toEndOf="@+id/imageCompte"
        app:layout_constraintStart_toStartOf="@+id/imageCompte"
        app:layout_constraintTop_toBottomOf="@+id/imageHotel"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageService"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/imageCompte"
        app:layout_constraintTop_toBottomOf="@+id/imageRestau"
        app:srcCompat="@drawable/messervices" />

    <ImageView
        android:id="@+id/imageFaq"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:contentDescription="@string/faq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageNotif"
        app:layout_constraintTop_toBottomOf="@+id/imageService"
        app:srcCompat="@drawable/faq"
        tools:ignore="ImageContrastCheck,ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageNotif"
        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/notif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCompte"
        app:srcCompat="@drawable/notifications"
        tools:ignore="ImageContrastCheck,ImageContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>