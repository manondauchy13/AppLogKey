<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MesServicesMenuActivity">
    <ImageView
        android:id="@+id/fontHaut"
        android:layout_width="412dp"
        android:layout_height="163dp"
        android:layout_marginTop="-70dp"
        android:contentDescription="@string/font_haut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hautappli" />

    <TextView
        android:id="@+id/accueilView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/mada_bold"
        android:text="Mes Services"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/microsoftteams_image" />

    <Button
        android:id="@+id/icone_roomService"
        android:layout_width="206dp"
        android:layout_height="90dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/icone_menus"
        android:fontFamily="@font/mada_bold"
        android:text="Room Service"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fontHaut"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#FFF9F9" />

    <Button
        android:id="@+id/icone_pressing"
        android:layout_width="206dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/icone_menus"
        android:fontFamily="@font/mada_bold"
        android:text="Pressing"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icone_roomService"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#FFF9F9" />

    <Button
        android:id="@+id/icone_taxi"
        android:layout_width="206dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/icone_menus"
        android:fontFamily="@font/mada_bold"
        android:text="Taxi"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icone_pressing"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#FFF9F9" />
</androidx.constraintlayout.widget.ConstraintLayout>